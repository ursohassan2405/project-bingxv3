# Environment Configuration
ENVIRONMENT=production
DEBUG=False

# BingX API Configuration - REQUIRED
# Get your credentials at: https://bingx.com/en-us/account/api
BINGX_API_KEY=your_bingx_api_key_here
BINGX_SECRET_KEY=your_bingx_secret_key_here
BINGX_TESTNET=False
BINGX_SANDBOX=False

# Database Configuration - REQUIRED
DATABASE_URL=postgresql://user:password@localhost:5432/bingx_trading
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bingx_trading
DB_USER=trading_bot
DB_PASSWORD=your_db_password_here
DB_POOL_SIZE=20
DB_POOL_TIMEOUT=30
DB_ECHO=False

# Redis Configuration - OPTIONAL
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=False

# Logging Configuration
LOG_LEVEL=ERROR
LOG_FILE=logs/trading_bot.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Performance Configuration
MAX_WORKERS=4
ENABLE_PROFILING=False
REQUEST_TIMEOUT=30

# Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# WebSocket Configuration
WS_HOST=0.0.0.0
WS_PORT=8765
WS_MAX_CONNECTIONS=100

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=*

# Trading Configuration
MAX_CONCURRENT_TRADES=5
MIN_ORDER_SIZE_USDT=10.0
MAX_POSITION_SIZE_PERCENT=2.0
INITIAL_STOP_LOSS_PERCENT=0.02
BREAKEVEN_TRIGGER_PERCENT=0.015
MAX_DAILY_LOSS_PERCENT=5.0
MAX_DRAWDOWN_PERCENT=10.0

# Technical Indicators
MM1_PERIOD=9
CENTER_PERIOD=21
RSI_PERIOD=14
VOLUME_SMA_PERIOD=20

# Trading Rules
RSI_MIN=35
RSI_MAX=73
MA_DISTANCE_2H_PERCENT=0.02
MA_DISTANCE_4H_PERCENT=0.03
VOLUME_SPIKE_THRESHOLD=2.0
VOLUME_SPIKE_LOOKBACK=20

# Scanner Configuration
SCAN_INTERVAL_SECONDS=30
MIN_VOLUME_24H_USDT=100000
MAX_ASSETS_TO_SCAN=100
ANALYSIS_TIMEFRAMES=2h,4h
SPOT_TIMEFRAME=1m

# Order Execution
ORDER_TIMEOUT_SECONDS=60
ORDER_RETRY_ATTEMPTS=3
ORDER_RETRY_DELAY=1.0
MAX_SLIPPAGE_PERCENT=0.5

# Emergency Controls
EMERGENCY_STOP=False
TRADING_ENABLED=True
PAPER_TRADING=False

# Notification Configuration - OPTIONAL
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
ENABLE_NOTIFICATIONS=False

# Render Deployment (Render.com specific)
RENDER_SERVICE_ID=your_render_service_id
RENDER=False